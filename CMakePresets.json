{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 20,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "default",
            "displayName": "Default Config",
            "description": "Base configuration",
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "FETCHCONTENT_BASE_DIR": "${sourceDir}/deps"
            }
        },
        {
            "name": "arm",
            "displayName": "ARM Cross-Compile",
            "description": "Cross-compile for ARM Cortex-M (STM32F103). Builds firmware and tests.",
            "inherits": "default",
            "binaryDir": "${sourceDir}/build/arm",
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/cmake/arm-none-eabi-toolchain.cmake",
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "host",
            "displayName": "Host",
            "description": "Native build for host machine. Unit tests only.",
            "inherits": "default",
            "binaryDir": "${sourceDir}/build/host",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        }
    ]
}